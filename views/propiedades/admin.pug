extends ../layout/admin
block contenido
    div
        h1.text-4xl.my-7.font-extrabold.text-center Prueba
            span.font-normal Node.js
        h2.text-center.text-2xl.font-extrabold= titulo
        a(class="rounded-md py-2 px-7 my-6 bg-indigo-500 text-center uppercase inline-block w-full sm:w-auto text-white text-lg hover:bg-indigo-400 font-bold"
        href="/bienes-raices/propiedades/crear") Publicar Propiedad


        //- pre= JSON.stringify(propiedades, undefined, 2)

        if propiedades
            div(class="bg-white shadow rounded-lg")
                ul(class="divide-y divide-gray-200")
                    each p in propiedades
                        li
                            div(class="p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-8 gap-4")
                                div(class="sm:w-1/4 md:w-1/6")
                                    img(src=`uploads/${propiedad.imagen}` alt=`Imagen propiedad ${propiedad.titulo}`)
                                div(class="sm:w-2/4 md:w-3/6 lg:w-4/6")
                                div(class="sm:w-1/4 md:w-2/6 lg:w-1/6")
        else
            p(class="text-center") No hay propiedades
